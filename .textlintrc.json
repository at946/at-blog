{
	"plugins": {
		"@textlint/markdown": {
			"extensions": [".mdoc"]
		}
	},
	"filters": {
		"allowlist": {
			"allow": [
				"スクラムマスター",
				"スパイマスター",
				"ブレイクアウトルーム",
				"/<!-- ignore textlint -->[\\s\\S]*?<!-- /ignore textlint -->/m",
				"/{%[\\s\\S]*?%}/",
				"/{% quote .* %}[\\s\\S]*?{% /quote %}/",
				"/> .*/",
				"/。」/",
				"/\\[.*\\](.*)/",
				"x",
				"単体テストの考え方/使い方"
			]
		}
	},
	"rules": {
		"preset-ja-spacing": true,
		"preset-ja-technical-writing": {
			"no-exclamation-question-mark": false
		},
		"spellcheck-tech-word": true
	}
}
