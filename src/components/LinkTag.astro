---
import Link from './mdoc/Link.astro';

interface Props {
	name: string;
	href: string;
}

const { name, href } = Astro.props;
---

<Link
  class:list={[
    "border-2 border-text dark:border-dark-text rounded-full px-3 py-1",
    "hover:text-primary hover:border-primary dark:hover:border-primary",
    "font-medium"
  ]}
  href={href}
>
  {name}
</Link>
