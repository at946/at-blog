---
import Link from './mdoc/Link.astro';

interface Props {
	name: string;
	href: string;
}

const { name, href } = Astro.props;
---

<Link
  class:list={[
    "border border-text dark:border-dark-text rounded-full px-2 py-1",
    "hover:text-primary hover:border-primary dark:hover:border-primary"
  ]}
  href={href}
>
  {name}
</Link>
