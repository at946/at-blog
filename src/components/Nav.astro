---
import { NAV_ITEMS } from '@/config';
---
<nav class="py-3 text-center mb-8">
  <ul class="inline-flex list-none gap-8 text-xl flex-wrap" transition:animate="fade">
    {
      Object.keys(NAV_ITEMS).map(navItemKey =>
        <li>
          {
            Astro.url.pathname === NAV_ITEMS[navItemKey].path
            ?
              <span class="underline underline-offset-8 font-bold text-primary capitalize">
                {NAV_ITEMS[navItemKey].title}
              </span>
            : <a
                class="hover:underline underline-offset-8 font-bold capitalize"
                href={NAV_ITEMS[navItemKey].path}
              >
                {NAV_ITEMS[navItemKey].title}
              </a>
          }
      </li>)
    }
  </ul>
</nav>
