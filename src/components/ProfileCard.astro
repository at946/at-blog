---
import { Icon } from 'astro-icon/components';
import Prose from './Prose.astro';
import SocialMediaAccountIcons from './SocialMediaAccountIcons.astro';
import Link from './mdoc/Link.astro';

interface Props {
	class: string;
}
---
<div class:list={[
  "flex flex-col md:flex-row w-full transition-all justify-center items-center inline",
  Astro.props.class
]}>
  <div>
    <img src="/images/pigeon.jpg" title="My icon" class="rounded-full h-48 w-48" />
  </div>
  <SocialMediaAccountIcons class="md:hidden mt-4" />
  <Prose>
  <ul class="gap-4">
    <li>Name🙎: asato</li>
    <li>Works💼: スクラムマスター</li>
    <li>Like💖: 家族、温泉、旅行、謎解き</li>
    <li>Dislike💔: はじめまして、あんこ、うなぎ</li>
    <SocialMediaAccountIcons class="hidden sm:flex" />
  </ul>
  </Prose>
</div>
