---
import Link from './Link.astro'
import AmazonLink from './AmazonLink.astro'

interface Props {
  sourceName?: string
  sourceLink?: string
  amazonItemId?: string 
}

const { sourceName, sourceLink, amazonItemId } = Astro.props
---
<blockquote class=`prose-quoteless ${(sourceName || amazonItemId) && 'mb-0'}`>
  <slot/>
</blockquote>
{ (sourceName || amazonItemId) &&
  <cite class="block text-right">
    { sourceLink
      ? <Link href={sourceLink} title={sourceName}>{sourceName}</Link>
      : sourceName
    }
    { amazonItemId &&
      <AmazonLink itemId={amazonItemId} type="link" />
    }
  </cite>
}