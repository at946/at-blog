---
import Link from './Link.astro';
import OgpLink from './OgpLink.astro';
import AmazonLink from './AmazonLink.astro';

interface Props {
  citeName?: string;
  citeUrl?: string;
  amazonItemId?: string;
};

const { citeName, citeUrl, amazonItemId } = Astro.props;
---
<blockquote class="prose-quoteless mb-0">
  <slot/>
</blockquote>
<cite class="block text-right">
  { (citeName && citeUrl) &&
    <Link href={citeUrl}>{citeName}</Link>
  }
  { (citeName && !citeUrl) &&
    citeName
  }
  { (!citeName && citeUrl) &&
    <OgpLink url={citeUrl} type="link" />
  }
  { amazonItemId &&
    <AmazonLink itemId={amazonItemId} type="link" />
  }
</cite>