---
const { page } = Astro.props;
---
<div class="flex justify-center py-6 gap-2">
  {
    page.url.prev &&
      <a
        class="text-base uppercase hover:underline underline-offset-4 hover:text-primary"
        href={page.url.prev}
        title="前に戻る"
      >
        &larr; Prev
      </a>
  }
  {
    page.url.next &&
      <a
        class="text-base uppercase hover:underline underline-offset-4 hover:text-primary"
        href={page.url.next}
        title="次に進む"
      >
        Next &rarr;
      </a>
  }
</div>
