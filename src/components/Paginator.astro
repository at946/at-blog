---
const { page } = Astro.props;
---
<div class="flex justify-center md:justify-end py-6 gap-2">
  {
    page.url.prev &&
      <a
        class="text-base uppercase text-gray-500 dark:text-gray-200 hover:underline underline-offset-4"
        href={page.url.prev}
        title="Go to Previous"
      >
        &larr; Prev
      </a>
  }
  {
    page.url.next &&
      <a
        class="text-base uppercase text-gray-500 dark:text-gray-200 hover:underline underline-offset-4"
        href={page.url.next}
        title="Go to Next"
      >
        Next &rarr;
      </a>
  }
</div>
