---
    import { SITE } from '@/config'
    import SvgIcon from './SvgIcon.astro'
    import ModeSwitcherBtn from './ModeSwitcherBtn.svelte'
    import HeaderNavItem from './HeaderNavItem.astro'
    import Link from './Link.astro'
    import { Icon } from 'astro-icon'

---

<header class="py-3">
    <h3 class="text-4xl font-extrabold text-theme-secondary dark:text-theme-dark-secondary">
            <a href="/">{ SITE.name }</a>
        </h3>
        <div class="flex justify-end">
            <nav>
                <ul class="flex gap-3">
                    <HeaderNavItem>
                        <Link href={`https://twitter.com/${SITE.authorTwitter}`} title={`${SITE.author}'s X account`} isTargetBlank={true}>
                            <SvgIcon>
                                <Icon name="mdi:twitter" />
                            </SvgIcon>
                        </Link>
                    </HeaderNavItem>
                    <HeaderNavItem>
                        <Link href={ SITE.githubUrl } title={`${ SITE.author }'s GitHub URL`} isTargetBlank={true}>
                            <SvgIcon>
                                <Icon name="mdi:github" />
                            </SvgIcon>
                        </Link>
                    </HeaderNavItem>
                    <HeaderNavItem>
                        <Link href="/rss.xml" title="RSS" isTargetBlank={true}>
                            <SvgIcon>
                                <Icon name="mdi:rss" />
                            </SvgIcon>
                        </Link>
                    </HeaderNavItem>
                    <HeaderNavItem>
                        <ModeSwitcherBtn client:visible />
                    </HeaderNavItem>
                </ul>
            </nav>
        </div> 
</header>
