---
import { Icon } from 'astro-icon/components';
import { SITE } from '@/config';
import ModeSwitcherBtn from './ModeSwitcherBtn.svelte';
import Link from './mdoc/Link.astro';
---

<header class="pt-7 pb-4">
  <div class="text-4xl font-extrabold text-primary">
    <Link href="/">{ SITE.name }</Link>
  </div>
  <div class="flex justify-end">
    <nav>
      <ul class="flex gap-3">
        <li>
          <Link href="/rss.xml" title="RSSを表示" class="hover:text-link">
            <Icon name="mdi:rss" class="text-2xl" />
          </Link>
        </li>
        <li class="hover:text-link">
          <ModeSwitcherBtn client:visible />
        </li>
      </ul>
    </nav>
  </div> 
</header>
