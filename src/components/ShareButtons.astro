---
import SvgIcon from './SvgIcon.astro'
import Link from './mdoc/Link.astro'
import { Icon } from 'astro-icon/components'

interface Props {
  blogTitle: string
}

const { blogTitle }: Props = Astro.props;

const xShareText: string = encodeURIComponent(`${blogTitle} #atblog\n${Astro.url}`)

---
<div class="flex justify-center">
  <Link href=`https://twitter.com/intent/post?text=${xShareText}` title="Xにシェア">
    <SvgIcon class="border-5">
      <Icon name="fa6-brands:x-twitter" class="text-2xl" />
    </SvgIcon>
  </Link>
</div>