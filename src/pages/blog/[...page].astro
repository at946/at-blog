---
export const prerender = true

import { getCollection } from 'astro:content'
import DefaultPageLayout from '$/layouts/default.astro'
import PostPreviewList from '$/components/PostPreviewList.astro'
import Paginator from '$/components/Paginator.astro'
import { PAGE_SIZE } from '$/config'

let title = 'Blog'
let description = 'ブログ置き場'

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection('blog', ({ data }) => data.published);
  const sortedPosts = allPosts.sort((a, b) => new Date(b.data.date) - new Date(a.data.date));

    return paginate(sortedPosts, {
      pageSize: PAGE_SIZE
    })
}

const { page } = Astro.props

---
<DefaultPageLayout content={{ title, description }}>
  <div class="mb-10">
    <PostPreviewList posts={page.data} heading={`${page.start + 1}-${page.end + 1} / ${page.total} posts`} />
  </div>    
  <Paginator page={page} />
</DefaultPageLayout>
